<html>
    <head>
        <link rel="stylesheet" href="{{ '/css/song.css' | url }}">
        <link rel="shortcut icon" type="image/png" href="{{ '/img/favicon.png' | url }}">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <style>
            body{
                font-size: 100%;
                font-family: Arial, Helvetica, sans-serif;
                margin: 0;
                color: var(--text);
            }

            div.Banner{
                background-color: var(--text);
                width: auto;
                display: flex;
                align-items: center;
            }

            div.Banner>img{
                display: block;
                max-width: 80%;
                height: auto;
                margin: auto;
            }
        </style>
     </head>
    <body>
    
        <div class="Banner" id = 'top'>
            <img src="{{ '/img/longandthin.png' | url }}">
        </div>
        
        {%- for item in songs -%}
          <h2>{{ item[1].title }}</h2>

            <div class="bigScreenSongDiv">
              {%- for line in item[1].lines -%}
              <div class = "FortmattingDiv">
                <div class = "song">
                    <div class = "row">
                      {%- if line.bold -%}<b>{%- endif -%}
                        <div class = "cell">
                            {{line.br}}
                        </div>
                        <div class = "cell">
                            {{line.en}}
                        </div>
                        {%- if line.bold -%}</b>{%- endif -%}  
                    </div>
                </div>
              </div>
            {%- endfor -%}

         {%- endfor -%}
      </body>
</html>     
