<html>
    <head>
        <title>
            {{ title }}
        </title>
        <link rel="stylesheet" href="{{ '/css/menu.css' | url }}">
        <link rel="stylesheet" href="{{ '/css/general.css' | url }}">
        <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
        <link rel="stylesheet" href="{{ '/css/song.css' | url }}">
        <link rel="stylesheet" href="{{ '/css/home.css' | url }}">
        <link rel="shortcut icon" type="image/png" href="{{ '/img/favicon.png' | url }}">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        </head>
    <body>
    
        <div class="Banner" id = 'top'>
            <img src="{{ '/img/longandthin.png' | url }}">
            <button class = "menuButton" onclick="myFunction()">
