<html>
    <head>
        <style>
            body{
                font-size: 100%;
                font-family: Arial, Helvetica, sans-serif;
                margin: 0;
                color: var(--text);
            }

            div.Banner{
                background-color: var(--text);
                width: auto;
                display: flex;
                align-items: center;
            }

            div.Banner>img{
                display: block;
                max-width: 80%;
                height: auto;
                margin: auto;
            }
            
            div.FortmattingDiv{
                display: inline;
                transition: margin-left .5s;
                padding: 20px;
            }

            div.song{
                display: table;
                margin: auto;
                width: 90vw;
            }

            div.row{
                display: table-row;
                width: auto;
            }

            div.cell{
                display: table-cell;
                float:left;
                width: 50%;
                min-height: 1em;
                word-wrap: break-word;
            }
        </style>
     </head>
    <body>
    
        <div class="Banner" id = 'top'>
            <img src="{{ '/img/longandthin.png' | url }}">
        </div>
        
        {%- for item in songs -%}
          <h2>{{ item[1].title }}</h2>

            <div class="bigScreenSongDiv">
              {%- for line in item[1].lines -%}
              <div class = "FortmattingDiv">
                <div class = "song">
                    <div class = "row">
                      {%- if line.bold -%}<b>{%- endif -%}
                        <div class = "cell">
                            {{line.br}}
                        </div>
                        <div class = "cell">
                            {{line.en}}
                        </div>
                        {%- if line.bold -%}</b>{%- endif -%}  
                    </div>
                </div>
              </div>
            {%- endfor -%}

         {%- endfor -%}
      </body>
</html>     
