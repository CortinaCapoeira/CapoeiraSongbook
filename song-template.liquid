---
title: "Capoeira Songbook"
layout: page-menu-banner.liquid
pagination:
  data: songs
  size: 1

permalink: "/song/{{ pagination.items[0] | slugify }}.html"
---
{%- for songidx in pagination.items -%}
  <h2>{{ songs[songidx].title }}</h2>
  
  {%- if songs[songidx].author -%}
    <p class ="author"> {{songs[songidx].author}} </p>
  {%- endif -%}
  
  {%- if songs[songidx].audio -%}
    <audio controls>
        <source src="{{songs[songidx].audio}}" type="audio/mpeg" />
    </audio>
  {%- endif -%}
  
  <div class="bigScreenSongDiv">
    {%- for line in linesWithDetails -%}
    <div class = "FortmattingDiv">
      <div class = "song">
          <div class = "row">
            {%- if line.bold -%}<b>{%- endif -%}
              <div class = "cell">
                  {%- for element in line.br -%}
                    {{element.text}}
                  {%- endfor -%}
              </div>
              <div class = "cell">
                  {%- for element in line.en -%}
                    {{element.text}}
                  {%- endfor -%}
              </div>
              {%- if line.bold -%}</b>{%- endif -%}  
          </div>
      </div>
    </div>
    {%- endfor -%}
  </div>

  <div class="mobileSongDiv">
    <div class = "subhead">
        Portuguese
        <br/>
    </div>
    <ol class="numNoDots">
    {%- for line in songs[songidx].lines -%}
      <li class = "smallSong">
        {%- if line.bold -%}<b>{%- endif -%}
        {{line.br}}
        {%- if line.bold -%}</b>{%- endif -%}
      </li>
    {%- endfor -%}
    </ol>
  </div>

  <div class="mobileSongDiv">
    <div class = "subhead">
      <br/>
      English
      <br/>
    </div>
    <ol class="numNoDots">
    {%- for line in songs[songidx].lines -%}
      <li class = "smallSong">
        {%- if line.bold -%}<b>{%- endif -%}
        {{line.en}}
        {%- if line.bold -%}</b>{%- endif -%}
      </li>
    {%- endfor -%}
    </ol>
  </div>

  {%- if songs[songidx].details -%}
    <a href="#s" data-tooltip = "This is a test tooltip">
    <!-- This is commented out so that the test tooltip doesn't show while it doesn't work-->
    <!--test-->
    </a>
  {%- endif -%}

  <!--<div class = "toIndex">-->
    <div class = "ButtonToIndex">   
        <li><a href="{{ '/song-index/' | url }}"> Return to Index</a></ButtonToTop></li>
    </div>
<!--</div>*-->
{%- endfor -%}


